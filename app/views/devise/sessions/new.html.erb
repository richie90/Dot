<body>
<div class="container">
  <div id="slideBox">
    <div class="topLayer">
      <div class="right">
        <div class="content">
          <h2>Login</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">  
            <%= f.text_field :email, class: "form-control", placeholder: "Email", required: true, autofocus: true  %>
          </div>
          <div class="form-group">       
            <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true, autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= link_to "Forgot Your Password?", new_user_password_path %>
            <%= f.submit "Login", class: "login-btn" %>
          </div> 

          
          <div class="form-group">
            <h5>Not a member? <%= link_to "Sign up now", new_user_registration_path %></h5>           
            <% end %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

</body>

