<head>
    <link rel="stylesheet" href="account.css" media="all" type="text/css">
</head>

<body>
<div class="container">
  <div id="slideBox">
    <div class="topLayer">
      <div class="right">
        <div class="content">
          <h2>Forgot password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="form-group">  
            <%= f.text_field :email, class: "form-control", placeholder: "Email", required: true, autofocus: true  %>
          </div>


          <div class="form-group">
            <%= f.submit "Send", class: "login-btn" %>
          </div>

          
          <div class="form-group">
            <h5>Not a member? <%= link_to "Sign up now", new_user_registration_path %></h5>           
            <% end %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

</body>


